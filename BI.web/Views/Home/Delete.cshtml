@model BI

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Apagar BI</h1>

<h3>Tem certeza que deseja apagar isso?</h3>
<div>
    <h4>BI</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Numero de BI
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BiNumber)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirhDate)
        </dd>
    </dl>

    <form asp-action="DeleteBI">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Lista</a>
    </form>
</div>
